@{
    Layout = null;
    ViewBag.Title = "_LayoutFunctionBar";
}
<div id="divContentFunction">
    <ul class="dark_color5">
        <li>
            <a href="#">
                <span class="back">
                    <img alt="" src="/Content/Images/ico_common.png" />
                </span>
                返回
            </a>
        </li>
        <li>
            <a href="#">
                <span class="add">
                    <img alt="" src="/Content/Images/ico_common.png" />
                </span>
                增加
            </a>
        </li>
        <li>
            <a href="#">
                <span class="del">
                    <img alt="" src="/Content/Images/ico_common.png" />
                </span>
                删除
            </a>
        </li>
        <li>
            <a href="#">
                <span class="edit">
                    <img alt="" src="/Content/Images/ico_common.png" />
                </span>
                编辑
            </a></li>
        <li>
            <a href="#">
                <span class="detail">
                    <img alt="" src="/Content/Images/ico_common.png" />
                </span>
                详细
            </a>

        </li>
        <li class="dropdown_pagecount" tabindex="0" role="menuitem">
            <select id="droplist_pagecount">
                <option>All</option>
                @{
                    for (int i = 0; i < 5; i++)
                    {
                    <option>@i</option>    
                    }
                }
            </select>
        </li>
        <li class="searchTool" tabindex="0" role="menuitem">
            <a href="#">
                <span class="search">
                    <img alt="" src="/Content/Images/ico_common.png" />
                </span>
                搜索
            </a>
        </li>

    </ul>

</div>

<div id="divSearchDetails">
    <div class="div_searchcontent">
        <div class="div_userid searchdata">
            <span>User ID</span>
            <input type="text" />
        </div>
        <div class="div_username searchdata">
            <span>User Name</span>
            <input type="text" />
        </div>
        <div class="div_including searchdata">
            <span>Including</span>
            <input type="text" />
        </div>
        <div class="div_closesearchbar">
            
        </div>
        <div class="div_datestart searchdata">
            <span>Date start</span>
            <input type="text" name="Title" title="Title" value="2013/10/12" class="text_BeginDate" />
            <span class="dateicon"></span>
        </div>
        <div class="div_dateend searchdata">
            <span>- Date end</span>
            <input type="text" name="Title" title="Title" value="@DateTime.Now.ToString("yyyy-m-d")" class="text_EndDate"/>
            <span class="dateicon"></span>
        </div>

        

        <div class="div_btnbar">
            <a href="#" class="ok">
                <span>
                    <img alt="" src="/Content/Images/ico_common.png" />
                </span>
            </a>
            <a href="#" class="reset">
                <span>
                    <img alt="" src="/Content/Images/ico_common.png" />
                </span>
            </a>
            <a href="#" class="cancel">
                <span>
                    <img alt="" src="/Content/Images/ico_common.png" />
                </span>
            </a>
        </div>
    </div>
</div>
