@model JobScheduling.Entity.CommModel.PagingModel
@{
    ViewBag.Title = "角色列表";
}

@section Scripts{
    <script src="~/Scripts/Shared/Pagination.js"></script>
    <script src="~/Scripts/Shared/CRUD_COMMOM.js"></script>

    <script type="text/javascript">

        //initial Pagecss
        function intialPageCss() {
            Gridview_li_Css(0, 1);
            Gridview_li_Css(1, 1);
            Gridview_li_Css(2, 20);
            Gridview_li_Css(3, 15);
            Gridview_li_Css(4, 15,'center');
            Gridview_li_Css(5, 40);
            //Gridview_li_Css(4, 20);
        }

    </script>
}



@section secFunctionBar{

    <ul class="dark_color5">
        @if (ViewData["New"] != null && Convert.ToBoolean(ViewData["New"]))
        {
        <li>
            <a href="/Group/New">
                <span class="new">
                    <img alt="" src="/Content/Images/ico_common.png" />
                </span>
                增加
            </a>
        </li>
        }
         @if (ViewData["Delete"] != null && Convert.ToBoolean(ViewData["Delete"]))
         {
        <li>
            <a href="#" onclick="btn_Del('/Group/Delete','GroupName')">
                <span class="del">
                    <img alt="" src="/Content/Images/ico_common.png" />
                </span>
                删除
            </a>
        </li>
         }
        @if (ViewData["Edit"] != null && Convert.ToBoolean(ViewData["Edit"]))
        {
        <li>
            <a href="#" onclick ="btn_Edit('/Group/Edit')" >
                <span class="edit">
                    <img alt="" src="/Content/Images/ico_common.png" />
                </span>
                编辑
            </a>
        </li>
        }
        @if (ViewData["Detail"] != null && Convert.ToBoolean(ViewData["Detail"]))
        {
        <li>
            <a href="#"  onclick ="btn_Edit('/Group/Detail')">
                <span class="detail">
                    <img alt="" src="/Content/Images/ico_common.png" />
                </span>
                详细
            </a>
        </li>
        }
        @if (ViewData["UserGroup"] != null && Convert.ToBoolean(ViewData["UserGroup"]))
        {
        <li>
            <a href="#"  onclick ="btn_Edit('/Group/UserGroup','ID')" >
                <span class="selectuser">
                    <img alt="" src="/Content/Images/ico_common.png" />
                </span>
                用户角色配置
            </a>
        </li>
        }
        <li class="dropdown_pagecount" tabindex="0" role="menuitem">
            @Html.DropDownList("pSize", ViewBag.SizeList as List<SelectListItem>, new { onchange = "ddlSize_onchange()", @class = "select_pagecount" })
        </li>
        <li class="searchTool" tabindex="0" role="menuitem">
            <a href="#">
                <span class="search">
                    <img alt="" src="/Content/Images/ico_common.png" />
                </span>
                搜索
            </a>
        </li>
    </ul>
        }


@section secSearchDetails{
    @using (Html.BeginForm())
    {  
        <div class="div_searchcontent" style="display:none">
            <div class="div_userid searchdata">
                <span>Group ID</span>
                @Html.TextBox("GroupID")
            </div>
            <div class="div_username searchdata">
                <span>Group Name</span>
                @Html.TextBox("GroupName")
            </div>
            <div class="div_username searchdata">
                <span>Description</span>
                @Html.TextBox("Description")
            </div>
            <div>
                @Html.HiddenFor(z => z.PageSize)
                @Html.HiddenFor(z => z.PageIndex)
                @Html.HiddenFor(z => z.TotalPages)
            </div>
            <div class="div_btnbar">
                <a href="#" class="ok" onclick="btnSearch_onclick()">
                    <span>
                        <img alt="" src="/Content/Images/ico_common.png" />
                    </span>
                </a>
                <a href="#" class="reset" >
                    <span>
                        <img alt="" src="/Content/Images/ico_common.png" />
                    </span>
                </a>
                <a href="#" class="close" >
                    <span>
                        <img alt="" src="/Content/Images/ico_common.png" />
                    </span>
                </a>
            </div>
        </div>
        <div class="div_closesearchbar">
        </div>
    }
}
@{Html.RenderPartial("~/Views/Shared/_PartialPageList.cshtml", Model);}



